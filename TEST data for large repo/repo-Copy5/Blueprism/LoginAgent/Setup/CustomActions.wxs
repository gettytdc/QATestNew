<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Fragment>
    <Property Id="BPINSTALLDIR">
      <RegistrySearch Id="BluePrism" Root="HKLM" Key="SOFTWARE\Blue Prism Limited\Automate\InstallDir" Type="directory" />
    </Property>
    <Binary Id="LoginAgentService" SourceFile="$(var.LoginAgentService.TargetPath)" />
    <CustomAction Id="ServiceInstaller" ExeCommand="/bits=32 /conn=[BPCONN] /bpinstalldir=[BPINSTALLDIR] /LogFile=[INSTALLFOLDER]\svcinst.log" BinaryKey="LoginAgentService" />
	</Fragment>
</Wix>
